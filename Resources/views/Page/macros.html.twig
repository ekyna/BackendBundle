{% macro tableBody(pages) %}

{% import 'EkynaBackendBundle:Macros:buttons.html.twig' as buttons %}
{% import 'EkynaBackendBundle:Macros:alerts.html.twig' as alerts %}

{% if pages|length > 0 %}
    <tbody>
    {% for page in pages %}
        <tr>
            <td>{{ page.id }}</td>
            <td>
                <a href="{{ path('ekyna_backend_page_show', {'id': page.id}) }}">{{ page.title }}</a>
            </td>
            <td>
                <ul class="actions">
                    {{ buttons.list_edit(path('ekyna_backend_page_update', {'id': page.id})) }}
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% else %}
{{ alerts.info('ekyna.page.alert.no_page'|trans) }}
{% endif %}

{% endmacro %}

{% macro tableHead(pages) %}
    <thead>
        <tr>
            <th class="id-column">{{ sylius_resource_sort('id', 'ID') }}</th>
            <th>{{ sylius_resource_sort('title', 'ekyna.core.field.title.label'|trans) }}</th>
            <th>Actions</th>
        </tr>
    </thead>
{% endmacro %}
