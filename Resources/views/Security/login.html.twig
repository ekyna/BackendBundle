{% extends 'EkynaBackendBundle::base.html.twig' %}

{% block title %}{{ parent() }} - {{ 'ekyna.admin.login_header'|trans }}{% endblock %}

{% block stylesheets %}
{{ parent() }}
{% stylesheets output='css/backend-login.css' filter='cssrewrite, ?yui_css' 'bundles/ekynabackend/css/login.css' %}
    <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
{% endstylesheets %}
{% endblock %}

{% block body %}
    <div class="login-wrapper">
        <a href="{{ path('ekyna_backend_security_login') }}">
            <img class="logo" src="{{ asset('bundles/ekynabackend/img/logo-white.png') }}">
        </a>

        <div class="box">
            <form method="post" action="{{ path('ekyna_backend_security_check') }}" class="content-wrap">
                <h6>{{ 'ekyna.admin.login_header'|trans }}</h6>
                <input name="_username" class="form-control" type="text" placeholder="{{ 'ekyna.admin.field.login'|trans }}">
                <input name="_password" class="form-control" type="password" placeholder="{{ 'ekyna.admin.field.password'|trans }}">
                {# <a href="#" class="forgot">Forgot password?</a> #}
                <div class="remember">
                    <input name="_remember_me" id="_remember_me" type="checkbox" value="remember-me">
                    <label for="_remember_me">{{ 'ekyna.admin.field.remember_me'|trans }}</label>
                </div>
                <button class="btn-glow primary login" type="submit">{{ 'ekyna.admin.button.login'|trans }}</button>
            </form>
        </div>
    </div>
{% endblock %}

